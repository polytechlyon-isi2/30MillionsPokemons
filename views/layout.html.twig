<!doctype html>
<html>
    <head>

        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/pokemon.css" rel="stylesheet">

        <title>30 Millions Pokemons</title>

    </head>
    <body>
        <div class="container">
            <section class="row col-sm-12">
                <div class="page-header" href="{{ path('home') }}">
                    <h1>30 Millions de Pokemons !</h1>
                </div>
            </section>

            <div class="row col-sm-12">
                <nav class="col-sm-2">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="glyphicon glyphicon-user"></span> Non Connect√© <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('connect') }}">Se Connecter</a></li>
                                <li><a href="{{ path('connect') }}">S'Inscrire</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>


                <section class="col-sm-10">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {% block title %}{% endblock %}
                        </div>
                        <div class="panel-body">
                            {% block content %}{% endblock %}
                        </div>
                        <div id="content">

                        </div>
                    </div>


                </section>
            </div>

            <footer class="row col-sm-12 footer">
                <div class="panel panel-body">
                    <p>todo : footer</p>
                </div>
            </footer>

        </div>
        <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
        <script src="{{ app.request.basepath }}/lib/bootstrap/js/dropdown.js"></script>
        <script>
            $(document).ready(function(){
                $('[data-toggle="tooltip"]').tooltip(); 
            });
        </script>

    </body>
</html>