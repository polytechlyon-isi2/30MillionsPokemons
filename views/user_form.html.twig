{% extends 'error.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<div class="well">
    {{ form_start(userForm, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(userForm.username, "Login (votre adresse email)", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(userForm.username) }}
            {{ form_widget(userForm.username, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.password.first, "Mot de passe", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.first, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.password.second, "Confirmation du mot de passe", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.password.second, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.name, "Nom", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.name, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.firstname, "Pr√©nom", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.firstname, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.adress, "Adresse", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.adress, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(userForm.postCode, "Code Postal", { 'label_attr':  {
        'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(userForm.postCode, { 'attr':  {
            'class': 'form-control'
            }}) }}
        </div>
    </div>    
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Sauvegarder"/>
        </div>
    </div>
    {{ form_end(userForm) }}
</div>
{% endblock %}