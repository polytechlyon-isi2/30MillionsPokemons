{% extends 'layout.html.twig' %}

{% block title %}Type{% endblock %}

{% block content %}
<div class="row category-child">
    
    {% if articles is empty %}
    
        <div class="alert alert-info text-center">
            <strong>Il n'y a aucun pokémon dans cette catégorie !</strong>
        </div>
        
    {% else %}
    
        {% for pokemon in articles %}
            <div class="col-lg-4 thumbnail">
                    <div class="wrapper">
                        <img data-toggle="tooltip" data-placement="bottom" title="{{ pokemon.getName }}"  src="{{ app.request.basepath }}/images/{{ pokemon.getName }}.jpg">
                    </div>
            </div>
        {% endfor %} 

    {% endif %}
    <br>
</div>
{% endblock %}
